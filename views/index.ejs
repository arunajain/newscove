    </div>
   
    <h4>Latest News</h4>
    <ul>
        <% articles.forEach(article => { %>
          <li>
            <h2><a href="<%= article.url %>"><%= article.title %></a></h2>
            <p><%= article.description %></p>
            <small>Published on <%= article.published_at %></small>
          </li>
        <% }) %>
    </ul>
  </div>
